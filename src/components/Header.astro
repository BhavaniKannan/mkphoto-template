---
import { SITE_TITLE } from '../consts';
---

<header>
  <nav class="header-container">
    <a href="/" class="brand">
      <img src="/images/logo.png" alt="MK Photography logo" width="56" height="56" class="logo" />
      <span class="site-title">{SITE_TITLE}</span>
    </a>

    <div class="social-links">
      <a href="https://www.instagram.com/mkcandidphotography/" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Instagram</span>
        <img src="/images/instagram-color.svg" alt="Instagram" width="28" height="28" />
      </a>
      <a href="https://www.facebook.com/muthu21k" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Facebook</span>
        <img src="/images/facebook-color.svg" alt="Facebook" width="28" height="28" />
      </a> 
      <a href="https://wa.me/918838564547" target="_blank" rel="noopener noreferrer">
      <span class="sr-only">WhatsApp</span>
      <img src="/images/whatsapp.svg" alt="WhatsApp" width="28" height="28" />
    </a>
    </div>
  </nav>
</header>

<style>
  header {
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 0.75rem 1.5rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    flex-wrap: wrap;
  }

  .brand {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }

  .logo {
    border-radius: 50%;
    margin-right: 0.75rem;
  }

  .site-title {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-links img {
    transition: transform 0.3s ease;
  }

  .social-links a:hover img {
    transform: scale(1.1);
  }

  @media (max-width: 600px) {
    .site-title {
      font-size: 1rem;
    }

    .social-links {
      gap: 0.75rem;
    }

    .logo {
      width: 48px;
      height: 48px;
    }
  }
</style>
