<style>
  header {
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 1rem 2rem;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    gap: 2rem;
  }

  .brand {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }

  .logo {
    border-radius: 50%;
    margin-right: 1rem;
  }

  .nav-links {
    display: flex;
    gap: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links img {
    transition: transform 0.3s ease;
  }

  .social-links a:hover img {
    transform: scale(1.1);
  }

  @media (max-width: 720px) {
    .nav-links {
      display: none;
    }
  }

  .carousel {
    overflow: hidden;
    width: 100%;
  }

  .carousel-track {
    display: flex;
    animation: scroll 20s linear infinite;
  }

  .carousel-track img {
    min-width: 100%;
    object-fit: cover;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-300%); }
  }
</style>
