---
// src/layouts/Layout.astro
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description || 'MK Photography'} />
    <link rel="stylesheet" href="/style.css" />
    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        background: #fff;
        color: #333;
      }
      header, footer {
        background: #111;
        color: white;
        padding: 1.5rem;
        text-align: center;
      }
      nav a {
        color: #fff;
        margin: 0 1rem;
        text-decoration: none;
        font-weight: bold;
      }
      main {
        max-width: 960px;
        margin: auto;
        padding: 2rem 1rem;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>MK Photography</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/services">Services</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>&copy; 2025 MK Photography. All rights reserved.</p>
    </footer>
  </body>
</html>
